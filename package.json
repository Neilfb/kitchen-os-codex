{
  "name": "kitchen-os-codex",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:allerq": "pnpm dev --filter=@kitchen-os/allerq",
    "dev:docs": "pnpm dev --filter=@kitchen-os/docs",
    "dev:foodsafe": "pnpm dev --filter=@kitchen-os/foodsafe",
    "test": "vitest",
    "dev:test": "pnpm run dev:check-env && pnpm test && pnpm dev",
    "smoke-auth": "pnpm --filter @kitchen-os/allerq run smoke-auth"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "tsx": "^4.20.6",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  }
}
